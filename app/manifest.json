{
    "name": "__MSG_appName__",
    "version": "0.9.1",
    "manifest_version": 2,
    "description": "__MSG_appDescription__",
    "icons": {
        "16": "images/icon-16.png",
        "128": "images/icon-128.png"
    },
    "default_locale": "en",
    "background": {
        "scripts": [
            "scripts/chromereload.js",
            "scripts/background.js"
        ],
        "persistent": false
    },
    "page_action": {
        "default_icon": {
            "19": "images/icon-19.png",
            "38": "images/icon-38.png"
        },
        "default_title": "fullyfeedly"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.feedly.com/*"
            ],
            "js": [
                "bower_components/spin.js/spin.js",
                "bower_components/iosoverlay/js/iosOverlay.js",
                "bower_components/mousetrap/mousetrap.js",
                "scripts/content.js"
            ],
            "css": [
                "bower_components/iosoverlay/css/iosOverlay.css",
                "styles/content.css"
            ]
        }
    ],
    "web_accessible_resources": [
        "images/cross.png",
        "images/check.png",
        "options.html"
    ],
    "permissions": [
        "declarativeContent",
        "activeTab",
        "storage",
        "https://boilerpipe-web.appspot.com/*",
        "https://www.readability.com/api/*",
        "https://mercury.postlight.com/*"
    ],
    "options_page": "options.html"
}
